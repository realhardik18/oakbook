{
  "manifest_version": 3,
  "name": "Oakbook - YouTube Learning Companion",
  "version": "1.0.0",
  "description": "Chat with AI about any YouTube video",
  "permissions": ["activeTab"],
  "action": {
    "default_popup": "popup.html"
  },
  "content_scripts": [
    {
      "matches": ["*://www.youtube.com/watch*"],
      "js": ["content.js"]
    }
  ]
}
